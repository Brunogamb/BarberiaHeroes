---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';	

const { title } = Astro.props;
const site = Astro.site?.toString() ?? 'https://www.barberiaheroes.com.ar/';
const favicon = new URL('/BarberiaHeroes/favicon.png', site).toString();
---

<!doctype html>
<html lang="es">
<head>
	<title>{title}</title>
    <meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">	
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="theme-color" content="#0b0b0b" />
	<meta name="msapplication-navbutton-color" content="#0b0b0b">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="description" content="Barberia Heroes: cortes de cabello modernos y clásicos, afeitados tradicionales y cuidado personal en un ambiente acogedor.">
	<meta name="author" content="Barberia Heroes">
	<meta name="robots" content="index, follow">
    <meta name="keywords" content="barbería, cortes de cabello, afeitados, cuidado personal">

    <meta property="og:site_name" content="Barberia Heroes">
    <meta property="og:title" content="Barberia Heroes">
    <meta property="og:description" content="Barberia Heroes: cortes de cabello modernos y clásicos, afeitados tradicionales y cuidado personal en un ambiente acogedor.">
    <meta property="og:image" content={favicon}>
    <meta property="og:url" content="https://www.barberiaheroes.com.ar/">
    <meta property="og:type" content="website">

    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Barberia Heroes">
    <meta name="twitter:description" content="Barberia Heroes: cortes de cabello modernos y clásicos, afeitados tradicionales y cuidado personal en un ambiente acogedor.">
    <meta name="twitter:image" content={favicon}>
    <link rel="canonical" href={site} />
    <link rel="icon" type="image/png" href="/BarberiaHeroes/favicon.png" />
    <link rel="icon" type="image/x-icon" href="/BarberiaHeroes/favicon.png" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700&display=swap">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700&display=swap" media="print" onload="this.media='all'">
    <noscript>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600;700&display=swap">
    </noscript>
    <title>Barberia Heroes | Cortes de cabello y cuidado personal en un ambiente acogedor</title>
</head>
    <body>
        <Header />
        <main>
            <slot />
        </main>
        <Footer />
        </body>
</html>

<style is:global>
:root {
    --color-primary: #0b0b0b;       
    --color-primary-light: #2b2b2b; 
    --color-primary-lighter: #4a4a4a; 
    --color-primary-dark: #000000; 
    --color-accent: #caa976;       
    --color-text: #222222;         
    --color-text-light: #6b6b6b;  
    --color-bg: #f2f2f2;           
    --color-white: #ffffff;
    --color-text-on-primary: #ffffff;
    --color-shadow-text-on-primary: 0 1px 4px rgba(0, 0, 0, 0.6);
    --color-shadow: rgba(0, 0, 0, 0.15);
    --color-shadow-hover: rgba(0, 0, 0, 0.25);
}

* {
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}

html, body {
    background-color: var(--color-primary);
}

html {
	overflow-y: scroll;
    scroll-behavior: smooth;
	scrollbar-color: var(--color-text-light) var(--color-primary-dark);
}

body {
    font-family: 'Outfit', ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    background: var(--color-bg);
    color: var(--color-text);
    display: flex;
    flex-direction: column;
    min-height: 100dvh;
    overflow-x: hidden;
    padding-top: 94px;
}

header, main, footer {
    width: 100%;
}

a {
    text-decoration: none;
    color: inherit;
}

main {
	flex: 1;
}
</style>
