---
import { Image } from 'astro:assets';
import logo from '../assets/logo.png';
const { eyebrow = "Barbería • Tradición y Estilo", title, subtitle } = Astro.props;

export interface HeroProps {
    title?: string;
    subtitle?: string;
}
---

<section class="hero" aria-label="Hero - Barbería Héroes">
    <div class="hero-inner">
        <div class="hero-copy">
        <p class="eyebrow">{eyebrow}</p>
        <h1>{title}</h1>
        <p class="subtitle">{subtitle}</p>
        <div class="hero-ctas">
            <a class="btn primary" href="/BarberiaHeroes/turnos">Reservar turno</a>
            <a class="btn ghost" href="/BarberiaHeroes/contacto">Contactar</a>
        </div>
        </div>

        <div class="hero-badge" aria-hidden="true">
        <Image src={logo} alt="Logo Barbería Héroes" />
        </div>
    </div>
</section>

<style>
    .hero {
        background: linear-gradient(180deg, var(--color-primary-dark) 0%, var(--color-primary) 100%);
        color: var(--color-text-on-primary);
        padding: 0 20px;
    }

    .hero-inner {
        max-width: 1200px;
        height: 400px;
        margin: 0 auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 40px;
    }

    .hero-copy {
        flex: 1 1 60%;
        color: var(--color-text-on-primary);
    }

    .eyebrow {
        color: rgba(255,255,255,0.85);
        font-weight: 600;
        letter-spacing: 0.08em;
        margin-bottom: 12px;
    }

    .hero-copy h1 {
        font-size: clamp(2rem, 6vw, 3.6rem);
        line-height: 1.02;
        margin: 0 0 18px 0;
        color: var(--color-white);
        text-shadow: var(--color-shadow-text-on-primary);
    }

    .subtitle {
        color: rgba(255,255,255,0.88);
        font-size: 1.05rem;
        margin-bottom: 22px;
        max-width: 60ch;
    }

    .hero-ctas {
        display: flex;
        gap: 14px;
        align-items: center;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 12px 20px;
        border-radius: 28px;
        font-weight: 700;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .btn.primary {
        background: var(--color-accent);
        color: var(--color-white);
        box-shadow: 0 2px 8px var(--color-shadow);
    }

    .btn.primary:hover { 
        background: var(--color-text-light);
        color: var(--color-);
    }

    .btn.ghost {
        background: transparent;
        color: rgba(255,255,255,0.95);
        border: 2px solid rgba(255,255,255,0.08);
    }

    .btn.ghost:hover {
        background: rgba(255,255,255,0.05);
    }

    .hero-badge {
        flex: 0 0 260px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .hero-badge img {
        width: 220px;
        height: auto;
        border-radius: 50%;
    }

    @media (max-width: 768px) {
        .hero-inner { 
            flex-direction: column-reverse; 
            text-align: center; 
        }

        .hero-copy { 
            width: 100%; 
        }

        .hero-badge { 
            margin-bottom: 12px; 
        }

        .hero-badge img { 
            width: 160px; 
        }

        .hero-ctas { 
            justify-content: center; 
        }
    }

    @media (max-width: 440px) {
        .hero { 
            padding: 40px 16px; 
        }

        .btn { 
            padding: 10px 16px; 
        }
    }
</style>
